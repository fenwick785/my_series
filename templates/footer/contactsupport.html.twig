<!--Section: Contact v.2-->
<section class="mb-4">
    {{ form_start(contactForm) }}
    
    <div class="row">

        <!--Grid column-->
        <div class="col-md-12 mb-md-0 mb-5">
         

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            {{form_row(contactForm.lastName)}}
                        </div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            {{form_row(contactForm.firstName)}}
                            
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            {{form_row(contactForm.subject)}}
                        </div>
                    </div>
                    {% if not(is_granted('IS_AUTHENTICATED_FULLY')) %}
                    <div class="col-md-6">
                           
                        <div class="md-form mb-0">
                            {{form_row(contactForm.email)}}
                        </div>
                        
                    </div>
                    {% endif %}
                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            {{form_row(contactForm.message)}}
                        </div>

                    </div>
                </div>
                <!--Grid row-->

          
            <div class="text-center text-md-center">
               {{form_row(contactForm.submit)}}
            </div>
            
        </div>
        

    </div>
    {{ form_end(contactForm) }}







</section>


{% endblock %}

