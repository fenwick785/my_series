{% extends 'base.html.twig' %}

{% block content %}
<h1>Liste des series</h1>


<a class="btn btn-success col-md-4 offset-md-4" href="{{ path('admin_add_serie') }}" role="button">Ajouter une serie</a>
<hr>


<table class="table table-dark">
    <thead>
    <tr>
    <th>photo</th>
    <th>id</th>
    <th>titre</th>
    <th>nombre de saison</th>
    <th>nombre d'épisode</th>
    <th>date de début</th>
    <th>public</th>
    <th>synopsis</th>
    <th>nationalité</th>
    <th>action</th>
    <tr>
    <thead>
    <tbody>
    {% for sr in serie %}
        <tr>
        <td><img class="" height="70px" src="{{ asset('/photo/' ~ sr.photo) }}" alt=""></td>
        <td>{{sr.id}}</td>
        <td>{{sr.title}}</td>
        <td>{{sr.nbSeason}}</td>
        <td>{{sr.nbEpisode}}</td>
        <td>{{sr.startDate}}</td>
        <td>{{sr.public}}</td>
        <td>{{sr.synopsis | slice(0, 15)}}...</td>
        <td>{{sr.nationality}}</td>
        <td>
        <a href="{{ path('admin_serie_sheet',{id:sr.id}) }}"><i class="fas fa-glasses"></i></a>
        <a href="{{ path('admin_delete_serie',{id:sr.id})}}" onclick="return confirm('Etes vous sur de vouloir supprimer la serie?')"><i class="fas fa-trash-alt"></i></a>
        <a href="{{ path('admin_update_serie', {id:sr.id}) }}"><i class="fas fa-edit"></i></a>
        </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>


{% endblock %}
