{% extends 'base.html.twig' %}

{% block content %}


    <h1 class="display-4">{{serie.title}}</h1><hr>


    <a href="{{path('admin_add_season')}}">
        <input type="submit" class="btn btn-warning col-md-4 offset-md-4" value="ajouter une saison"/>
    </a><br><br>
    <h4>
        Détails de la série</h4>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Photo:
            {{serie.photo}}</li>
        <li class="list-group-item">Id:
            {{serie.id}}</li>
        <li class="list-group-item">Titre:
            {{serie.title}}</li>
        <li class="list-group-item">Nombre de saison:
            {{serie.nbSeason}}</li>
        <li class="list-group-item">Nombre d'épisode:
            {{serie.nbEpisode}}</li>
        <li class="list-group-item">Date de début:
            {{serie.startDate}}</li>
        <li class="list-group-item">Public:
            {{serie.public}}</li>
        <li class="list-group-item">Synopsis:
            {{serie.synopsis}}...</li>
        <li class="list-group-item">Nationalité:
            {{serie.nationality}}</li>
    </ul>
{% endblock %}
