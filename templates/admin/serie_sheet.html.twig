{% extends 'base.html.twig' %}

{% block content %}


    <h1 class="display-4">{{serie.title}}</h1>
    
    
    <a href="{{path('admin_add_season')}}">
        <input Type="submit" class="btn btn-warning col-md-4 offset-md-4" value="ajouter une saison"/>
    </a><hr>

    <ul>
        <li>photo: {{serie.photo}}</li>
        <li>id: {{serie.id}}</li>
        <li>titre: {{serie.title}}</li>
        <li>nombre de saison: {{serie.nbSeason}}</li>
        <li>nombre d'épisode: {{serie.nbEpisode}}</li>
        <li>date de début: {{serie.startDate}}</li>
        <li>public: {{serie.public}}</li>
        <li>synopsis: {{serie.synopsis | slice(0, 15)}}...</li>
        <li>nationalité: {{serie.nationality}}</li>
        <li>saison:</li>

 <table class="table table-dark">
    <thead>
    <tr>
    <th>id:</th>
    <th>titre</th>
    <th>order saison</th>
    <th>synopsis</th>
    <th>year</th>
    <th>action</th>
    <tr>
    <thead>
    <tbody>
    {% for sea in serie.seasons %}
        <tr>
        <td>{{sea.id}}</td>
        <td>{{sea.title}}</td>
        <td>{{sea.orderSeason}}</td>
        <td>{{sea.synopsis}}</td>
        <td>{{sea.year}}</td>
        <td>
        <a href="{{ path('admin_season_sheet',{id:sea.id}) }}"><i class="fas fa-glasses"></i></a>
        <a href="{{ path('admin_delete_season',{id:sea.id})}}" onclick="return confirm('Etes vous sur de vouloir supprimer le membre?')"><i class="fas fa-trash-alt"></i></a>
        <a href="{{ path('admin_update_season',{id:sea.id}) }}"><i class="fas fa-edit"></i></a></td> 
        <td>
            
        </td> 
        </tr>
    {% endfor %}
    </tbody>
    </table>




    </ul>


{% endblock %}
