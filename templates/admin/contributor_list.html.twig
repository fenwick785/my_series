{% extends "base.html.twig" %}

{% block content %}


    <h1>Liste des contributeurs
    </h1><hr>
    <div class="table-responsive">
        <table class="table text-center table-bordered table-dark table-striped">
            <thead class="font-weight-bold">
                <tr>
                    <th class="font-weight-bold">id user</th>
                    <th>Pseudo</th>
                    <th>E-mail</th>
                    <th>Prenom</th>
                    <th>nom</th>
                    <th>genre</th>
                    <th>role</th>
                    <th>location</th>
                    <th>date de naissance</th>
                    <th>newsletter</th>
                    <th colspan="2">action</th>
                </tr>
            </thead>

            <tbody>
                {% for u in contributor %}
                    <tr>
                        <td>{{u.id}}</td>
                        <td>{{u.username}}</td>
                        <td>{{u.email}}</td>
                        <td>{{u.firstName}}</td>
                        <td>{{u.lastName}}</td>
                        <td>
                            {% if u.kind == 'm' %}
                                Homme
                            {% elseif u.kind == 'f' %}
                                Femme
                            {% elseif u.kind == 't' %}
                                Non binaire
                            {% endif %}
                        </td>
                        <td>{{u.role}}</td>
                        <td>{{u.location}}</td>
                        <td>{{u.birthDate | date('d/m/Y')}}</td>
                        <td>
                            {% if u.newsletter == 0 %}

                                <i class="fas fa-times text-danger"></i>
                            {% elseif u.newsletter == 1 %}
                                <i class="fas fa-check text-success"></i>

                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('admin_contributor_delete',{id:u.id})}}" onclick="return confirm('Etes vous sur de vouloir supprimer le contributeur?')">
                                <i class="fas fa-trash-alt text-white"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('admin_user_update', {id:u.id}) }}">
                                <i class="fas fa-edit text-white"></i>
                            </a>
                        </td> 
                         {# <a href="{{ path('admin_user_fiche',{id:u.id}) }}"><i class="fas fa-glasses"></i></a> #}
                       
                    </tr>
                {% endfor %}
            </tbody>

        </table>
    </div>
    <br>
{% endblock %}
